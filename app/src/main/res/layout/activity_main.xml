<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.patty.respuestitasnavideas.MainActivity"
    android:background="@drawable/bgd">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="71"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:layout_width="50dp"
                        android:layout_height="44dp"
                        android:src="@drawable/heart_circle" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="30  +"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:layout_width="50dp"
                        android:layout_height="44dp"
                        android:src="@drawable/musi" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="12608  +"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_width="50dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ruby"
                        android:id="@+id/imageView6" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="30  +"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:textSize="15sp"
                        />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_orange_dark"
                android:text="2.Jingle Bells"
                android:textStyle="bold"
                android:layout_marginBottom="25dp"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:layout_width="53dp"
                    android:layout_height="56dp"
                    android:src="@drawable/corona"
                    />
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:layout_width="65dp"
                    android:layout_height="90dp"
                    android:src="@drawable/corona"

                    />
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:layout_width="60dp"
                    android:layout_height="81dp"
                    android:src="@drawable/corona"
                    />

            </LinearLayout>
            <TextView
                android:textSize="85sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2000"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mejor 2103"
                android:gravity="center"

                android:layout_weight="0.38" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60dp">
            <ImageButton
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:src="@drawable/icon"
                android:paddingRight="100dp"
                android:paddingLeft="100dp" />
            <ImageButton
                android:layout_width="151dp"
                android:layout_height="53dp"
                android:gravity="center_horizontal"
                android:src="@drawable/refre"
                android:paddingRight="100dp"
                android:paddingLeft="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageButton
                android:layout_width="49dp"
                android:layout_height="53dp"
                android:gravity="center_horizontal"
                android:src="@drawable/sharee"
                android:paddingRight="6dp"
                android:paddingLeft="10dp" />

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
